{
    "trailingSlash": true,
    "redirects": [
        {
            "source": "/:path+",
            "has": [
                {
                    "type": "host",
                    "value": "(?<host>.*)"
                }
            ],
            "destination": "/:path+/",
            "permanent": true,
            "statusCode": 301
        }
    ]
}